.decl point(x:number, y:number) // fuzzable relation
point(0, 0).
point(1, 1).
point(2, 2).
point(-1, 1).
point(-1, -1).
point(3, -3).

.decl out(r:number, x:number) // fuzzable relation
.output out
out(0,0).
out(r+1, z) :- r < 30, out(r,_), z = count : { point(x,y), x <= r + 1, x >= -r - 1, y <= r + 1, y >= -r - 1 }.
